<div class="row">
<div class="col-md-4 col-md-offset-4">
<h2>登入</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.label :email%>
	<div class="input-group margin-button-sm">
    	<span class="input-group-addon"><i class="fa fa-envelope-o"></i></span>
    	<%= f.text_field :email, required: false, autofocus: true, placeholder:"Email address",class:"form-control"%>
	</div>
	<%= f.label :password%>
	<div class="input-group margin-button-sm">
		<span class="input-group-addon"><i class="fa fa-key"></i></span>
		<%= f.text_field :password, required: false , placeholder: "Password" ,class: "form-control",type: "password"%>
	</div>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

  <div class="form-actions">
    <%= f.button :submit, "登入" %>
  </div>
<% end %>
<div class="text-right">
<%= render "devise/shared/links" %>
</div>
</div>
</div>
