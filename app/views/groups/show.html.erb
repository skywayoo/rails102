<div class="container">
<div class="row">
  <div class="text-right">
    <%= link_to("新增文章",new_group_post_path(@group),class: "btn btn-warning")%>
    <%= link_to("編輯討論版", edit_group_path(@group), class: "btn btn-primary")%>
  </div>
  <h2><%= @group.title %></h2>
  <p><%= @group.description %></p>

  <table class="table">
  	<thead>
  		<tr>
  			<th>文章</th>
  			<th colspan="2" rowspan="" headers="" scope=""></th>
  		</tr>
  	</thead>
  	<tbody>
  		<% @posts.each do |post| %>
  		<tr>
  		<td><%= post.content %></td>
  		<td align="right"><%= link_to("編輯", edit_group_post_path(post.group,post),class:"btn btn-default btn-xs")%>
  		<%= link_to("刪除", group_post_path(post.group,post),class:"btn btn-default btn-xs",method: :delete,data:{confirm:"確認刪除?"})%>
  		</td>
  		</tr>
  		<% end %>
  	</tbody>
  </table>
</div>
</div>