<div class="container">
<div class="row">
<i class="fa fa-group fa-3x" style="padding:10px;"> 討論區</i>
<div class="col-md-12">
  <div class="group">
    <%= link_to("新增討論版", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>編號</td>
        <td>主題</td>
        <td>討論區簡介</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%=group.id%></td>
          <td><%= link_to(group.title, group_path(group)) %></td>
          <td><%= group.description %></td>
          <td>
              <%= link_to("編輯", edit_group_path(group), class: "btn btn-sm btn-default")%>
              <%= link_to("刪除", group_path(group),    class: "btn btn-sm btn-default", 
                          method: :delete, data: { confirm: "確認刪除?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>
</div>
